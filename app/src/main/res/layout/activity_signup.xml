<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".signupActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T9 App"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:gravity="center">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join us! Enter your resturant details"
                android:textSize="20dp"
                android:textColor="@android:color/white"

                android:layout_margin="10dp"
                android:gravity="left">

            </TextView>
            <androidx.cardview.widget.CardView
                android:padding="20dp"
                android:layout_margin="10dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rname"
                        android:hint="Name"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rcategory"
                        android:hint="Category"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/raddress"
                        android:hint="Address"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rcity"
                        android:hint="City"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rstate"
                        android:hint="State"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rpin"
                        android:hint="Pin code"
                        android:inputType="phone"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rcontact"
                        android:hint="Contact"
                        android:inputType="phone"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:text="GST"
                            android:textStyle="bold"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:text="INCLUSIVE"
                            android:textStyle="bold"></TextView>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rinclusive"
                            android:layout_weight="1"
                            android:checked="true"></CheckBox>
                        <Spinner
                            android:id="@+id/rgst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                           />

                    </LinearLayout>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/rpicture"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/cooking"></ImageView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">
               <TextView

                   android:drawablePadding="10dp"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:id="@+id/rimage"
                   android:hint="Image"
                   android:textColor="@android:color/white"
                   android:gravity="center"
                   android:drawableLeft="@drawable/ic_baseline_camera_alt_24"
                   android:layout_margin="5dp"
                   android:background="@color/colorPrimary"></TextView>

               <TextView
                   android:textColor="@android:color/white"
                   android:id="@+id/rlocation"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:layout_margin="5dp"
                   android:background="@color/colorPrimary"

                   android:drawableLeft="@drawable/ic_baseline_location_on_24"
                   android:drawablePadding="10dp"
                   android:gravity="center"
                   android:hint="Image"
                   android:text="Select Location"></TextView>
           </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView

                            android:drawablePadding="10dp"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:id="@+id/rlat"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_margin="5dp">
                           </TextView>
                        <TextView

                            android:drawablePadding="10dp"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:id="@+id/rlong"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_margin="5dp"></TextView>
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rpassword"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/rcpassword"
                        android:inputType="textPassword"
                        android:hint="Confirm"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"></EditText>

                    <Button
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rsignup"
                        android:text="Submit"
                        android:layout_margin="20dp"
                        android:background="@drawable/background">

                    </Button>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>

</LinearLayout>